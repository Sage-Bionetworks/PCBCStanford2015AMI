{
    "variables": {
	"aws_access_key": "{{env `AWS_ACCESS_KEY`}}",
	"aws_secret_key": "{{env `AWS_SECRET_KEY`}}"
    },
    
    "builders": [
	{
	    "type": "amazon-ebs",
	    "access_key": "{{user `aws_access_key`}}",
	    "secret_key": "{{user `aws_secret_key`}}",
	    "region": "us-east-1",
	    "source_ami": "ami-d05e75b8",
	    "ssh_username": "ubuntu",
	    "ami_name": "ubuntu-PCBC {{timestamp}}",
	    "instance_type": "c3.2xlarge"
	}	
    ],
    
    "provisioners": [
	{
	    "type": "shell",
	    "scripts": ["ec2provisioner.sh", "altanalyze_provisioner.sh", "synapseprovisioner.sh"],
	    "pause_before": "10s",
	    "execute_command": "{{ .Vars }} sudo -E sh '{{ .Path }}'",
	    "only": ["amazon-ebs"]
	}
    ],
    
    "post-processors": [
        []
    ]

}
